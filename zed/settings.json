{
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true
  },
  // Theme & Fonts - Keep your preferences
  "theme": "Fleet Dark",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono",
    "font_size": 16
  },

  // Save & Format - Manual only
  "autosave": "off",
  "format_on_save": "on",
  "use_on_type_format": false,

  "tab_size": 2,
  "hard_tabs": false,
  "relative_line_numbers": true,
  "preferred_line_length": 100,
  "soft_wrap": "none",
  "show_wrap_guides": true,
  "wrap_guides": [80, 100],

  // Basic UI - Keep functional panels
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": false,
    "auto_reveal_entries": false
  },

  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/node_modules",
    "**/.env",
    "**/.env.local",
    "**/dist",
    "**/build"
  ]
}
