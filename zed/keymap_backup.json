[
  // === VIM MODE BINDINGS (Neovim-inspired) ===
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space w q": "pane::CloseActiveItem",
      "space q q": "zed::Quit",
      "space w w": "workspace::Save",
      "space space": "file_finder::Toggle",
      "space /": "workspace::NewSearch",
      "space e": "project_panel::ToggleFocus",
      "space t o": "pane::SplitRight",
      "space t x": "pane::CloseActiveItem",
      "space f f": "file_finder::Toggle"
    }
  },
  // === GLOBAL ECLIPSE-STYLE BINDINGS ===
  {
    "context": "Workspace",
    "bindings": {
      // File Navigation (Eclipse style)
      "ctrl-shift-r": "file_finder::Toggle",
      "ctrl-shift-t": "outline::Toggle",
      "ctrl-e": "tab_switcher::Toggle",
      "ctrl-f6": "pane::ActivateNextItem",
      "ctrl-shift-f6": "pane::ActivatePrevItem",

      // Search & Navigation
      "ctrl-h": "buffer_search::Deploy",
      "ctrl-k": "search::SelectNextMatch",
      "ctrl-shift-k": "search::SelectPrevMatch",
      "ctrl-l": "go_to_line::Toggle",
      "ctrl-shift-g": "editor::FindAllReferences",
      "f3": "editor::GoToDefinition",

      // Code Formatting & Organization
      "ctrl-shift-f": "editor::Format",
      "ctrl-shift-o": "editor::ToggleCodeActions",

      // Quick Actions
      "ctrl-1": "editor::ToggleCodeActions",
      "ctrl-space": "editor::ShowCompletions",

      // Window Management
      "ctrl-m": "workspace::ToggleCenteredLayout",
      "ctrl-shift-w": "pane::CloseAllItems"
    }
  },
  // === EDITOR-SPECIFIC ECLIPSE BINDINGS ===
  {
    "context": "Editor",
    "bindings": {
      // Line Operations
      "ctrl-d": "editor::DeleteLine",
      "ctrl-shift-enter": "editor::NewlineAbove",
      "ctrl-enter": "editor::Newline",

      // Text Manipulation
      "ctrl-shift-x": "editor::ConvertToUpperCase",
      "ctrl-shift-y": "editor::ConvertToLowerCase",

      // Comments (Eclipse style)
      "ctrl-/": "editor::ToggleComments",
      "ctrl-shift-/": "editor::ToggleBlockComment",

      // Code Navigation
      "ctrl-o": "outline::Toggle",
      "alt-left": "pane::GoBack",
      "alt-right": "pane::GoForward",

      // Refactoring
      "alt-shift-r": "editor::Rename",
      "alt-shift-m": "editor::ToggleCodeActions",

      // Selection
      "ctrl-a": "editor::SelectAll",
      "shift-alt-up": "editor::AddSelectionAbove",
      "shift-alt-down": "editor::AddSelectionBelow"
    }
  },
  // === PROJECT PANEL BINDINGS ===
  {
    "context": "ProjectPanel",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "escape": "workspace::ToggleLeftDock"
    }
  },
  // === SEARCH PANEL BINDINGS ===
  {
    "context": "Search",
    "bindings": {
      "ctrl-h": "search::ToggleReplace",
      "escape": "workspace::ToggleBottomDock"
    }
  },
  // === TERMINAL BINDINGS ===
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-`": "workspace::ToggleBottomDock",
      "cmd-t": "workspace::NewTerminal"
    }
  }
]
