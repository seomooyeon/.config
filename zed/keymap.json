[
  // VIM MODE - Essential bindings only
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space w": "workspace::Save",
      "space q": "zed::Quit",
      "space space": "file_finder::Toggle",
      "space /": "workspace::NewSearch",
      "space e": "project_panel::ToggleFocus",
      "space f f": "file_finder::Toggle"
    }
  },

  // GLOBAL - Core functionality
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-r": "file_finder::Toggle",
      "ctrl-e": "tab_switcher::Toggle",
      "ctrl-h": "buffer_search::Deploy",
      "ctrl-l": "go_to_line::Toggle",
      "f3": "editor::GoToDefinition"
    }
  },

  {
    "context": "Pane",
    "bindings": {
      "cmd-1": ["pane::ActivateItem", 0],
      "cmd-2": ["pane::ActivateItem", 1],
      "cmd-3": ["pane::ActivateItem", 2],
      "cmd-4": ["pane::ActivateItem", 3],
      "cmd-5": ["pane::ActivateItem", 4],
      "cmd-6": ["pane::ActivateItem", 5],
      "cmd-7": ["pane::ActivateItem", 6],
      "cmd-8": ["pane::ActivateItem", 7],
      "cmd-9": ["pane::ActivateItem", 8],
      "cmd-0": "pane::ActivateLastItem"
    }
  },

  // EDITOR - Essential operations
  {
    "context": "Editor",
    "bindings": {
      "ctrl-/": "editor::ToggleComments",
      "ctrl-a": "editor::SelectAll"
    }
  },

  // PROJECT PANEL
  {
    "context": "ProjectPanel",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "space g g": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor || Terminal",
    "bindings": {
      "space c c": "workspace::ToggleRightDock",
      "cmd-m": "workspace::ToggleZoom",
      "space g g": "git_panel::ToggleFocus"
    }
  }
]
